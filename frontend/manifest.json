{
  "manifest_version": 3,
  "name": "Reviews Squared",
  "description": "For indecisive people too lazy to read the reviews",
  "version": "1.0",
  "icons": {
    "16": "imgs/random-16.png",
    "32": "imgs/random-32.png",
    "48": "imgs/random-48.png",
    "128": "imgs/random-128.png"
  },
  "content_scripts": [
    {
      "js": ["contentscript.js"],
      "matches": ["https://www.amazon.com/*", "https://www.target.com/*", "https://www.bestbuy.com/*"]
    }
  ],
  "web_accessible_resources" : [
    {
      "resources" : ["index.html"],
      "matches" : ["https://www.amazon.com/*", "https://www.target.com/*", "https://www.bestbuy.com/*"]
    }
  ]
}
